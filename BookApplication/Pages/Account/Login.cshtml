@page
@model BookApplication.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>AccountUser</h4>
<hr />
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="AccountUser.UserFullName" class="control-label"></label>
                <input asp-for="AccountUser.UserFullName" class="form-control" />
                <span asp-validation-for="AccountUser.UserFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountUser.UserPassword" class="control-label"></label>
                <input asp-for="AccountUser.UserPassword" class="form-control" />
                <span asp-validation-for="AccountUser.UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
